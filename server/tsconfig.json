{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "noEmit": true,
    "composite": true,
    /* Modules */
    "module": "commonJS",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "allowJs": false,
    "pretty": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": false
  }
}
