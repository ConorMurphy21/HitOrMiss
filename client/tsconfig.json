{
  "extends": "../tsconfig.options.json",
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "**/node_modules/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "@types/bootstrap", "@types/node"],
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "noUnusedLocals": false,
    "noImplicitReturns": false
  }
}
